<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/fondo_tarjeta_gris"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/textoNombrePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Playlist"
        android:textColor="@color/colorTextoGeneral"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textoAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/textoLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 me gusta"
        android:textColor="@color/colorGris"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />
</LinearLayout>

